#include <mega328p.h>

// Declare your global variables here
unsigned int  fibo = 0;

// Custom Functions

/*
fibonacciGenerator allows to calculate the term "n" in the Fibonnaci sucession.

inputs
    _n: it indicates the nth term in the sucession
    
outputs
    It outputs the value of the nth term in the sucession     

*/
unsigned int fibonnaciGenerator(unsigned int _n){
    unsigned int f0 = 0x0, f1 = 0x1, fn = 0x0;     
    
    if (_n == 1) return f0;
    else if (_n == 2) return f1;
    else{
        unsigned int iter = 3;
        for(iter; iter <= _n ; iter++){
            fn = f0 + f1;
            f0 = f1;
            f1 = fn;    
        }
        return fn;
    }             
}

void delay(void){
    int i = 0, c = 0;
    for(i; i < 1000; i++){
        c++;
    }
}

